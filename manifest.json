{
  "manifest_version": 3,
  "name": "Fluent Youtube Downloader",
  "version": "0.0.1",
  "description": "A browser extension for the Fluent Youtube Downloader",
  "permissions": [ "activeTab" ],
  "action": {
    "default_icon": "./public/media/icons/favicon.png",
    "default_popup": "./public/index.html"
  },
  "icons": {
    "48": "./public/media/icons/favicon.png"
  },
  "host_permissions": [
    "*://*/*"
  ]
}